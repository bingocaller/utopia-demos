{
  "name": "utopia-demos",
  "version": "0.2.0",
  "description": "A couple of demos showing how Utopia works.",
  "scripts": {
    "styles:watch": "sass --watch src/scss:src/css",
    "styles:build": "sass src/scss:src/css",
    "eleventy:build": "eleventy",
    "eleventy:watch": "eleventy --serve",
    "start": "npm-run-all styles:build --parallel *:watch",
    "build": "npm-run-all *:build"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.36.0",
    "stylelint": "^13.13.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-scss": "^3.20.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bingocaller/utopia-demos.git"
  },
  "keywords": [
    "utopia",
    "fluid-typography",
    "responsive-grid"
  ],
  "author": "Jesper N. Jakobsen <jesper.nellemann@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bingocaller/utopia-demos/issues"
  },
  "homepage": "https://github.com/bingocaller/utopia-demos#readme"
}
